<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="2">

        <TextView
            android:id="@+id/cart_item_list_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Leche semidesnatada Prime Minister"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cart_item_list_item_checked"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="2">

        <TextView
            android:id="@+id/cart_item_list_item_units"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14dp"
            android:textColor="#666"
            android:layout_weight="1"
            android:text="2 (KG) x 12,5 EUR" />

        <TextView
            android:id="@+id/cart_item_list_item_total"
            android:layout_width="150dp"
            android:gravity="right"
            android:textColor="#666"
            android:textSize="14dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="25 EUR" />
    </LinearLayout>

</LinearLayout>